<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_button_vien_tron"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvNoiDungCauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung câu hỏi sẽ hiện ở đây..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/rgDapAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Đáp án A"
            android:textSize="15sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Đáp án B"
            android:textSize="15sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Đáp án C"
            android:textSize="15sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Đáp án D"
            android:textSize="15sp"
            android:padding="8dp"/>
    </RadioGroup>

</LinearLayout>