<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvCauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu 1: Android là hệ điều hành của hãng nào?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <RadioButton
            android:id="@+id/radA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Apple"
            android:textSize="18sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Google"
            android:textSize="18sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Microsoft"
            android:textSize="18sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Samsung"
            android:textSize="18sp"
            android:padding="10dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnNopBai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nộp bài"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"/>

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"/>

</LinearLayout>